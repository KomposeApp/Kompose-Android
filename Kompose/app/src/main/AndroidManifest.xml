<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ethz.inf.vs.kompose">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/konkret"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/KomposeTheme">

        <activity android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PartyCreationActivity"
            android:label="Create your own Party"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ConnectActivity"
            android:label="Choose a Party"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".PlaylistActivity"
            android:label="@string/title_activity_playlist"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">

            <!--youtube link share intents-->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HistoryOverviewActivity"
            android:label="Overview of past Playlists"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".HistoryDetailsActivity"
            android:label="Playlist History"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>

        <service
            android:name=".service.AndroidServerService"
            android:stopWithTask="true" />

        <service android:name=".service.ClientNetworkService" />

        <service android:name=".service.AudioService" />

        <activity android:name=".DesignActivity" />
    </application>

</manifest>