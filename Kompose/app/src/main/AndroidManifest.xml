<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ethz.inf.vs.kompose">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/konkret"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/KomposeTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PartyCreationActivity" />
        <activity android:name=".ConnectActivity" />
        <activity android:name=".PlaylistActivity" />
        <activity android:name=".HistoryOverviewActivity" />
        <activity android:name=".HistoryDetailsActivity"/>
        <activity android:name=".settings.SettingsActivity" />

        <service
            android:name=".service.AndroidServerService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>