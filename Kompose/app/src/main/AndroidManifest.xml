<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ethz.inf.vs.kompose">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/konkret"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/KomposeTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PartyCreationActivity"
            android:screenOrientation="portrait"
            android:label="Create your own Party" />
        <activity
            android:name=".ConnectActivity"
            android:screenOrientation="portrait"
            android:label="Choose a Party" />
        <activity
            android:name=".HistoryOverviewActivity"
            android:screenOrientation="portrait"
            android:label="Overview of past Playlists" />
        <activity
            android:name=".HistoryDetailsActivity"
            android:screenOrientation="portrait"
            android:label="Playlist History" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:label="Settings" />

        <service
            android:name=".service.AndroidServerService"
            android:stopWithTask="true" />
        <service android:name=".service.ClientNetworkService" />

        <activity android:name=".DesignActivity" />
        <activity
            android:name=".PlaylistActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_playlist" />
    </application>

</manifest>