<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ethz.inf.vs.kompose">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/konkret"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/KomposeTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaylistActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_playlist"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HistoryOverviewActivity"
            android:configChanges="orientation|screenSize"
            android:label="Overview of past Playlists"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HistoryDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="Playlist History"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="Settings"
            android:screenOrientation="portrait" />

        <service
            android:name=".service.host.HostServerService"
            android:stopWithTask="true" />
        <service android:name=".service.client.ClientNetworkService" />
        <service android:name=".service.AudioService" />

        <!-- Activity used exclusively to share songs -->
        <activity
            android:name=".ShareActivity"
            android:label="Kompose"
            android:theme="@android:style/Theme.NoDisplay">
            <!-- youtube link share intents -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

    </application>

</manifest>