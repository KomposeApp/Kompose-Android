<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Secondary application theme. -->
    <style name="KomposeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KomposeTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="KomposeTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="KomposeTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RootLayout">

    </style>

    <style name="TextContentLayout">
        <item name="android:paddingTop">3pt</item>
        <item name="android:paddingBottom">3pt</item>
        <item name="android:paddingLeft">1pt</item>
        <item name="android:paddingRight">1pt</item>
    </style>

    <style name="DialogContentLayout">
        <item name="android:paddingTop">5pt</item>
        <item name="android:paddingBottom">5pt</item>
        <item name="android:paddingLeft">3pt</item>
        <item name="android:paddingRight">3pt</item>
    </style>

    <style name="TileLayout" parent="DialogContentLayout">
        <item name="android:background">@color/greyBackground</item>
        <item name="android:layout_marginLeft">3pt</item>
        <item name="android:layout_marginRight">3pt</item>

        <item name="android:layout_marginBottom">1.5pt</item>
        <item name="android:layout_marginTop">1.5pt</item>

        <item name="android:elevation">1pt</item>
    </style>

    <style name="TextContentBase">

    </style>


    <style name="BaseTextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">7pt</item>
        <item name="android:layout_marginLeft">2pt</item>
        <item name="android:layout_marginRight">2pt</item>
    </style>

    <style name="PrimaryTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">8.4pt</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SecondaryTextView" parent="BaseTextView">

    </style>

    <style name="IconButtonTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/androidicons</item>
        <item name="android:textSize">5.7pt</item>
        <item name="android:padding">7.4pt</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SmallIconButtonTextView" parent="IconButtonTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">2dp</item>
    </style>


    <style name="DefaultEditText">
        <item name="android:layout_marginStart">0pt</item>
    </style>

    <style name="LabelTextView" parent="BaseTextView">
        <item name="android:layout_marginBottom">-2pt</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">4.375pt</item>
        <item name="android:layout_marginLeft">2pt</item>
        <item name="android:layout_marginRight">2pt</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:fontFamily">@font/russo_one</item>
        <item name="android:textSize">8pt</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">6pt</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginLeft">2pt</item>
        <item name="android:layout_marginRight">2pt</item>
    </style>

    <style name="HorizontalDividerLayout">
        <item name="android:layout_width">20pt</item>
        <item name="android:layout_height">2pt</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginTop">4pt</item>
        <item name="android:layout_marginBottom">4pt</item>
        <item name="android:layout_marginLeft">2pt</item>
        <item name="android:layout_marginRight">2pt</item>

    </style>

    <style name="VerticalDividerLayout">
        <item name="android:layout_width">1pt</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginStart">6pt</item>
        <item name="android:layout_marginEnd">6pt</item>
    </style>

</resources>
